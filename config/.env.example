# ===========================================
# PATO2 SERVER CONFIGURATION (Termux/Mobile)
# ===========================================

# Domain and Network
DOMAIN=pato2.duckdns.org
PORT=5000
PROXY_TCP_PORT=25565

# Security
JWT_SECRET=your_very_long_random_secret_key_here_change_this
HOST_PC_TOKEN=your_shared_token_for_hosts_change_this

# Host Management
HOST_LEASE_TTL_MS=45000
MAX_CONNECTIONS_PER_HOST=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/pato2.log

# ===========================================
# HOST AGENT CONFIGURATION (PC)
# ===========================================

# Connection
HOST_TOKEN=your_shared_token_for_hosts_change_this
PATO2_ENDPOINT=http://pato2.duckdns.org:5000

# Minecraft Server
MINECRAFT_DIR=/path/to/minecraft/server
MINECRAFT_PORT=25565
SERVER_JAR=server.jar

# Google Drive Backup
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id
GOOGLE_DRIVE_CLIENT_ID=your_google_client_id
GOOGLE_DRIVE_CLIENT_SECRET=your_google_client_secret
GOOGLE_DRIVE_REFRESH_TOKEN=your_google_refresh_token

# Backup Settings
BACKUPS_PATH=/path/to/backups
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# System
HEARTBEAT_INTERVAL_SECONDS=15
RECONNECT_DELAY_SECONDS=5
MAX_RECONNECT_ATTEMPTS=10