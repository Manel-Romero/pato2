# Pato2 Docker Environment Configuration
# Copy this file to .env for Docker Compose deployment

# ===========================================
# PATO2 SERVER CONFIGURATION
# ===========================================

# Domain and Network
DOMAIN=pato2.duckdns.org
PORT=5000
PROXY_TCP_PORT=25565

# Security (CHANGE THESE VALUES!)
JWT_SECRET=your_very_long_random_secret_key_here_change_this_immediately
HOST_PC_TOKEN=your_shared_token_for_hosts_change_this_to_match_host_config

# Host Management
HOST_LEASE_TTL_MS=45000
MAX_CONNECTIONS_PER_HOST=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/pato2.log

# ===========================================
# OPTIONAL SERVICES CONFIGURATION
# ===========================================

# Redis Configuration (if using Redis service)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# Database Configuration (for future features)
DATABASE_URL=sqlite:./data/pato2.db

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Grafana Configuration
GRAFANA_PASSWORD=secure_admin_password_change_this

# ===========================================
# SSL/TLS CONFIGURATION (for Nginx)
# ===========================================

# SSL Certificate paths (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Let's Encrypt configuration
LETSENCRYPT_EMAIL=your-email@example.com
LETSENCRYPT_DOMAIN=pato2.duckdns.org

# ===========================================
# BACKUP CONFIGURATION
# ===========================================

# Backup retention
BACKUP_RETENTION_DAYS=30
BACKUP_CLEANUP_INTERVAL_HOURS=24

# ===========================================
# PERFORMANCE TUNING
# ===========================================

# Node.js memory limits
NODE_OPTIONS=--max-old-space-size=512

# Connection limits
MAX_WEBSOCKET_CONNECTIONS=100
MAX_TCP_CONNECTIONS=200

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# DEVELOPMENT/DEBUG CONFIGURATION
# ===========================================

# Development mode
NODE_ENV=production

# Debug logging
DEBUG=pato2:*

# CORS configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# ===========================================
# DOCKER-SPECIFIC CONFIGURATION
# ===========================================

# Container timezone
TZ=UTC

# Health check configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Restart policy
RESTART_POLICY=unless-stopped